# ============================================================================
# GraphWiz Trader Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# Neo4j Knowledge Graph Configuration
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password
NEO4J_DATABASE=neo4j

# ============================================================================
# Exchange API Credentials
# ============================================================================
# Binance
EXCHANGE_API_KEY_BINANCE=your_binance_api_key
EXCHANGE_API_SECRET_BINANCE=your_binance_api_secret

# Coinbase
EXCHANGE_API_KEY_COINBASE=your_coinbase_api_key
EXCHANGE_API_SECRET_COINBASE=your_coinbase_api_secret

# Kraken
EXCHANGE_API_KEY_KRAKEN=your_kraken_api_key
EXCHANGE_API_SECRET_KRAKEN=your_kraken_api_secret

# ============================================================================
# AI/LLM Provider Credentials
# ============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_org_id  # Optional

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# Application Configuration
# ============================================================================
GRAPHWIZ_ENV=development  # development, staging, production
GRAPHWIZ_CONFIG=config/paper_trading.yaml
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Trading Configuration
# ============================================================================
TRADING_MODE=paper  # paper, live, backtest
RISK_LEVEL=moderate  # conservative, moderate, aggressive

# ============================================================================
# Monitoring & Alerting
# ============================================================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=trader@example.com,ops@example.com

# Prometheus
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# ============================================================================
# External Services
# ============================================================================
# Datadog (optional)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Sentry (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# Security
# ============================================================================
# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Encryption key for sensitive data at rest (optional)
ENCRYPTION_KEY=your_encryption_key

# ============================================================================
# Development/Debugging
# ============================================================================
DEBUG=false
ENABLE_PROFILING=false
TRACE_LOGGING=false

# ============================================================================
# Docker Configuration
# ============================================================================
# Docker build arguments
VERSION=0.1.0
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')

# Docker secrets (for swarm mode)
# These would be mounted as secrets in production
DOCKER NEO4J_PASSWORD_FILE=/run/secrets/neo4j_password
DOCKER EXCHANGE_API_KEY_FILE=/run/secrets/exchange_api_key
DOCKER EXCHANGE_API_SECRET_FILE=/run/secrets/exchange_api_secret
