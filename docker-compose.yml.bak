version: '3.8'

services:
  # Neo4j Knowledge Graph Database
  neo4j:
    image: neo4j:5.15-community
    container_name: graphwiz-neo4j
    environment:
      - NEO4J_AUTH=neo4j/${NEO4J_PASSWORD:-graphwiz_secure_password}
      - NEO4J_PLUGINS=["apoc"]
      - NEO4J_dbms_memory_heap_initial__size=512m
      - NEO4J_dbms_memory_heap_max__size=2G
      - NEO4J_dbms_memory_pagecache_size=512m
      - NEO4J_dbms_connector_bolt_advertised__address=:7687
      - NEO4J_dbms_connector_http_advertised__address=:7474
    ports:
      - "${NEO4J_HTTP_PORT:-7474}:7474"  # HTTP
      - "${NEO4J_BOLT_PORT:-7687}:7687"  # Bolt
    volumes:
      - neo4j_data:/data
      - neo4j_logs:/logs
      - neo4j_import:/var/lib/neo4j/import
      - neo4j_plugins:/plugins
    networks:
      - graphwiz-network
    healthcheck:
      test: ["CMD", "cypher-shell", "-u", "neo4j", "-p", "${NEO4J_PASSWORD:-graphwiz_secure_password}", "RETURN 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    read_only: false
    tmpfs:
      - /tmp
    resources:
      cpus_limit: '2'
      memory_limit: 4G
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # GraphWiz Trader Application
  graphwiz-trader:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        BUILD_DATE: ${BUILD_DATE:-2024-01-01}
        VERSION: ${VERSION:-0.1.0}
    image: graphwiz-trader:${VERSION:-latest}
    container_name: graphwiz-trader
    environment:
      # Neo4j Configuration
      - NEO4J_URI=bolt://neo4j:7687
      - NEO4J_USERNAME=neo4j
      - NEO4J_PASSWORD=${NEO4J_PASSWORD:-graphwiz_secure_password}

      # Application Configuration
      - PYTHONPATH=/app/src
      - LOG_LEVEL=${LOG_LEVEL:-INFO}
      - TRADING_MODE=${TRADING_MODE:-paper}
      - CONFIG_PATH=/app/config/production.yaml

      # API Keys (loaded from .env)
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
      - EXCHANGE_API_KEYS=${EXCHANGE_API_KEYS}

      # Security
      - ENABLE_AUTH=${ENABLE_AUTH:-true}
      - JWT_SECRET=${JWT_SECRET}

      # Monitoring
      - ENABLE_METRICS=${ENABLE_METRICS:-true}
      - PROMETHEUS_PORT=${PROMETHEUS_PORT:-9090}
    ports:
      - "${APP_PORT:-8080}:8080"  # Web interface
      - "${METRICS_PORT:-9090}:9090"  # Metrics
    volumes:
      - ./config:/app/config:ro
      - ./data:/app/data
      - ./logs:/app/logs
      - ./backtests:/app/backtests
      - graphwiz_cache:/tmp/graphwiz_cache
    depends_on:
      neo4j:
        condition: service_healthy
      prometheus:
        condition: service_started
    networks:
      - graphwiz-network
      - monitoring-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - NET_BIND_SERVICE
    read_only: false
    tmpfs:
      - /tmp
    resources:
      cpus_limit: '4'
      memory_limit: 8G
    logging:
      driver: "json-file"
      options:
        max-size: "50m"
        max-file: "5"

  # Prometheus for Metrics Collection
  prometheus:
    image: prom/prometheus:v2.48.0
    container_name: graphwiz-prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--web.enable-lifecycle'
      - '--storage.tsdb.retention.time=30d'
    ports:
      - "${PROMETHEUI_PORT:-9091}:9090"
    volumes:
      - ./deploy/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus_data:/prometheus
    networks:
      - monitoring-network
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    read_only: true
    resources:
      cpus_limit: '1'
      memory_limit: 2G
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # Grafana for Dashboards
  grafana:
    image: grafana/grafana:10.2.2
    container_name: graphwiz-grafana
    environment:
      - GF_SECURITY_ADMIN_USER=${GRAFANA_USER:-admin}
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_PASSWORD:-graphwiz_grafana}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_INSTALL_PLUGINS=grafana-piechart-panel
      - GF_SERVER_ROOT_URL=http://localhost:3000
    ports:
      - "${GRAFANA_PORT:-3000}:3000"
    volumes:
      - grafana_data:/var/lib/grafana
      - ./dashboards:/etc/grafana/provisioning/dashboards:ro
      - ./deploy/grafana-datasources.yml:/etc/grafana/provisioning/datasources/datasources.yml:ro
    networks:
      - monitoring-network
    depends_on:
      - prometheus
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    resources:
      cpus_limit: '1'
      memory_limit: 1G
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # Optional: Agent Looper for continuous optimization
  agent-looper:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        BUILD_DATE: ${BUILD_DATE:-2024-01-01}
        VERSION: ${VERSION:-0.1.0}
    image: graphwiz-trader:${VERSION:-latest}
    container_name: graphwiz-looper
    environment:
      - NEO4J_URI=bolt://neo4j:7687
      - NEO4J_USERNAME=neo4j
      - NEO4J_PASSWORD=${NEO4J_PASSWORD:-graphwiz_secure_password}
      - PYTHONPATH=/app/src
      - LOG_LEVEL=${LOG_LEVEL:-INFO}
      - AGENT_LOOPER_MODE=true
      - LOOP_INTERVAL=${LOOPER_INTERVAL:-300}
    volumes:
      - ./config:/app/config:ro
      - ./logs:/app/logs
      - looper_cache:/tmp/looper_cache
    depends_on:
      neo4j:
        condition: service_healthy
    networks:
      - graphwiz-network
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    read_only: false
    tmpfs:
      - /tmp
    resources:
      cpus_limit: '2'
      memory_limit: 4G
    logging:
      driver: "json-file"
      options:
        max-size: "20m"
        max-file: "3"
    profiles:
      - looper

  # Nginx Reverse Proxy (optional)
  nginx:
    image: nginx:1.25-alpine
    container_name: graphwiz-nginx
    ports:
      - "${NGINX_HTTP_PORT:-80}:80"
      - "${NGINX_HTTPS_PORT:-443}:443"
    volumes:
      - ./deploy/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./deploy/ssl:/etc/nginx/ssl:ro
      - nginx_logs:/var/log/nginx
    depends_on:
      - graphwiz-trader
    networks:
      - graphwiz-network
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - NET_BIND_SERVICE
      - CHOWN
      - SETGID
      - SETUID
    read_only: true
    tmpfs:
      - /var/run
      - /var/cache/nginx
    resources:
      cpus_limit: '1'
      memory_limit: 512M
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
    profiles:
      - proxy

volumes:
  neo4j_data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /opt/git/graphwiz-trader/data/neo4j
  neo4j_logs:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /opt/git/graphwiz-trader/logs/neo4j
  neo4j_import:
    driver: local
  neo4j_plugins:
    driver: local
  prometheus_data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /opt/git/graphwiz-trader/data/prometheus
  grafana_data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /opt/git/graphwiz-trader/data/grafana
  graphwiz_cache:
    driver: local
  looper_cache:
    driver: local
  nginx_logs:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /opt/git/graphwiz-trader/logs/nginx

networks:
  graphwiz-network:
    driver: bridge
    driver_opts:
      com.docker.network.bridge.name: br_graphwiz
      com.docker.network.bridge.enable_icc: "true"
      com.docker.network.bridge.enable_ip_masquerade: "true"
    ipam:
      config:
        - subnet: 172.28.0.0/16
  monitoring-network:
    driver: bridge
    driver_opts:
      com.docker.network.bridge.name: br_monitoring
      com.docker.network.bridge.enable_icc: "true"
    internal: false
